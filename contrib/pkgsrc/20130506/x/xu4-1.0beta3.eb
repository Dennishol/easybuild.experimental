name = 'xu4'
version = '1.0beta3'
versionsuffix = '-20130506'

description = "xu4-1.0beta3: Remake of Ultima IV"

sources = [SOURCE_TAR_GZ]
source_urls = ['http://sourceforge.net/projects/xu4/files', 'download']

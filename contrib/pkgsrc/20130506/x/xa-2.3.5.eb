name = 'xa'
version = '2.3.5'
versionsuffix = '-20130506'

description = "xa-2.3.5: Cross assembler for MOS Technologies 6502"

sources = [SOURCE_TAR_GZ]
source_urls = ['http://www.floodgap.com/retrotech/xa/dists/']

name = 'rmail'
version = 'mime-1.13.0'
versionsuffix = '-20130506'

description = "rmail-mime-1.13.0: MIME-capabilities for RMAIL in Emacs"

sources = [SOURCE_TAR_GZ]
source_urls = ['ftp://ftp.m17n.org/pub/mule/semi/rmail-mime/']


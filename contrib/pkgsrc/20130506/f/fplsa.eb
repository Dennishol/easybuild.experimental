name = 'gp-fplsa-1.0'
version = 'fplsa'
versionsuffix = '-20130506'

description = "fplsa: GAP interface to FPLSA"

sources = ['fplsa.zoo']
version = 'fplsa-1.0'
name = 'gp'
source_urls = ['ftp://ftp-gap.dcs.st-and.ac.uk/pub/gap/gap4/share/']

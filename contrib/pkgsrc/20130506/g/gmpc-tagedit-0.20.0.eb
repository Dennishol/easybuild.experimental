name = 'gmpc'
version = 'tagedit-0.20.0'
versionsuffix = '-20130506'

description = "gmpc-tagedit-0.20.0: GMPC plugin for editing song tags"

sources = [SOURCE_TAR_GZ]
source_urls = ['http://download.sarine.nl/Programs/gmpc/0.20.0/']

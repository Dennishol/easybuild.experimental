name = 'mlt'
version = '0.8.6'
versionsuffix = '-20130506'

description = "mlt-0.8.6: Open source multimedia framework"

sources = [SOURCE_TAR_GZ]
source_urls = ['http://downloads.sourceforge.net/project/mlt/mlt/']

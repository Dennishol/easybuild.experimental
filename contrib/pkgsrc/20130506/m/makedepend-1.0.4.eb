version = '1.0.4'
versionsuffix = '-20130506'

description = "makedepend-1.0.4: Dependency generator for make"

sources = ['makedepend-1.0.4.tar.bz2']
source_urls = ['http://sourceforge.net/projects/util/files', 'download']

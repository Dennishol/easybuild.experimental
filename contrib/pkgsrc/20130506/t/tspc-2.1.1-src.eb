name = 'tspc'
version = '2.1.1-src'
versionsuffix = '-20130506'

description = "tspc-2.1.1-src: Tunnel Setup Protocol Client for Freenet6"

sources = ['tspc-2.1.1-src.tgz']
source_urls = ['http://www.hexago.com/files/']

name = 'libnjb'
version = '2.2.6'
versionsuffix = '-20130506'

description = "libnjb-2.2.6: Communicating with some Creative and Dell audio players"

sources = [SOURCE_TAR_GZ]
source_urls = ['http://sourceforge.net/projects/libnjb/files', 'download']

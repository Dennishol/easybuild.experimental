version = '1.0.11'
versionsuffix = '-20130506'

description = "libusbx-1.0.11: USB Access Library version 1 for of libusb"

sources = ['libusbx-1.0.11.tar.bz2']
source_urls = ['http://sourceforge.net/projects/libusbx/files', 'download']

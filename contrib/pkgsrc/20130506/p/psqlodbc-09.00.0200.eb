version = '09.00.0200'
versionsuffix = '-20130506'

description = "psqlodbc-09.00.0200: ODBC interface to PostgreSQL"

sources = ['psqlodbc-09.00.0200.tar.gz']
version = 'postgresql-9.0.200'
name = 'odbc'
source_urls = ['${MASTER_SITE_PGSQL:=odbc/versions/src/}']

name = 'xengine'
version = '1.0.1'
versionsuffix = '-20141219'

description = "xengine-1.0.1: Reciprocating engine for X"

sources = [SOURCE_TAR_GZ]
source_urls = ['ftp://ftp.42.org/pub/OLD/x/xengine/']

toolchain = {'name': 'goolf', 'version': '1.4.10'}

sanity_check_paths = {
    'files': [],   ## fixme

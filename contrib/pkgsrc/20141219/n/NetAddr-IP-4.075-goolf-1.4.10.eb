easyblock = 'ConfigureMake'

name = 'p5-'
version = 'IP-4.075'
versionsuffix = '-20141219'

description = "NetAddr-IP-4.075: Perl5 module for managing IP addresses"

sources = ['NetAddr-IP-4.075.tar.gz']
version = '${DISTNAME}'
name = 'p5'
source_urls = ['http://ftp.nluug.nl/languages/perl/CPAN/NetAddr/']

homepage = 'http://search.cpan.org/dist/NetAddr-IP/'

toolchain = {'name': 'goolf', 'version': '1.4.10'}

sanity_check_paths = {
    'files': [],   ## fixme
    'dirs': ['.'], ## fixme
}

parallel = 1         # this is a very conservative choice ## fixme
moduleclass = 'base' # please change this from base to right category ## fixme


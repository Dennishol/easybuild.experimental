easyblock = 'ConfigureMake'

name = 'unicode'
version = 'screensaver-0.4'
versionsuffix = '-20141219'

description = "unicode-screensaver-0.4: Screensaver that repeatedly randomly picks an unicode character"

sources = [SOURCE_TAR_GZ]
source_urls = ['http://www.joachim-breitner.de/archive/unicode-screensaver/']

homepage = 'http://www.joachim-breitner.de/projects#unicode-screensaver'

toolchain = {'name': 'goolf', 'version': '1.4.10'}

sanity_check_paths = {
    'files': [],   ## fixme
    'dirs': ['.'], ## fixme
}

parallel = 1         # this is a very conservative choice ## fixme
moduleclass = 'base' # please change this from base to right category ## fixme


name = 'ted-sv-2.16'
version = 'Ted_sv_SE'
versionsuffix = '-20141219'

description = "Ted_sv_SE: Swedish spelling dictionary for the Ted word processor"

sources = ['Ted_sv_SE.tar.gz']
version = 'sv-2.16'
name = 'ted'
source_urls = ['ftp://ftp.nluug.nl/pub/editors/ted/']

homepage = 'http://www.nllgg.nl/Ted/'

toolchain = {'name': 'goolf', 'version': '1.4.10'}

sanity_check_paths = {
    'files': [],   ## fixme

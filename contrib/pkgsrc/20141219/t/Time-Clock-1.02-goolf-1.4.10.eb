easyblock = 'ConfigureMake'

name = 'p5-'
version = 'Clock-1.02'
versionsuffix = '-20141219'

description = "Time-Clock-1.02: Twenty-four hour clock object with nanosecond precision"

sources = ['Time-Clock-1.02.tar.gz']
version = '${DISTNAME}'
name = 'p5'
source_urls = ['http://ftp.nluug.nl/languages/perl/CPAN/Time/']

homepage = 'http://search.cpan.org/dist/Time-Clock/'

toolchain = {'name': 'goolf', 'version': '1.4.10'}

sanity_check_paths = {
    'files': [],   ## fixme
    'dirs': ['.'], ## fixme
}

parallel = 1         # this is a very conservative choice ## fixme
moduleclass = 'base' # please change this from base to right category ## fixme


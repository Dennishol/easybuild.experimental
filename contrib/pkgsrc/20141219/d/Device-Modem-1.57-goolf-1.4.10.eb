name = 'p5-'
version = 'Modem-1.57'
versionsuffix = '-20141219'

description = "Device-Modem-1.57: Perl module to talk to modem devices connected via serial port"

sources = ['Device-Modem-1.57.tar.gz']
version = '${DISTNAME}'
name = 'p5'

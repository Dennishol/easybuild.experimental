easyblock = 'ConfigureMake'

name = 'p5-'
version = 'Simple-1.21'
versionsuffix = '-20141219'

description = "Calendar-Simple-1.21: Perl extension to create simple calendars"

sources = ['Calendar-Simple-1.21.tar.gz']
version = '${DISTNAME}'
name = 'p5'
source_urls = ['http://ftp.nluug.nl/languages/perl/CPAN/Calendar/']

homepage = 'http://search.cpan.org/dist/Calendar-Simple/'

toolchain = {'name': 'goolf', 'version': '1.4.10'}

sanity_check_paths = {
    'files': [],   ## fixme
    'dirs': ['.'], ## fixme
}

parallel = 1         # this is a very conservative choice ## fixme
moduleclass = 'base' # please change this from base to right category ## fixme

